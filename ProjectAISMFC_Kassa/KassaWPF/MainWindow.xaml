<Window x:Class="KassaWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KassaWPF"
        mc:Ignorable="d"
        Title="АИС Касса WPF" Height="350" Width="1000">
    <Grid>
        <Menu x:Name="menu" Height="52" Width="691" Margin="0" VerticalAlignment="Top">
            <Button HorizontalAlignment="Left" Width="40" Height="40"/>
            <Button HorizontalAlignment="Left" Width="40" Height="40"/>
            <Button HorizontalAlignment="Left" Width="40" Height="40">
                <Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>
            </Button>
            <Button HorizontalAlignment="Left" Width="40" Height="40">
                <Button.Effect>
                    <BlurEffect/>
                </Button.Effect>
            </Button>
            <MenuItem Header="MenuItem"/>
        </Menu>
    </Grid>
</Window>
